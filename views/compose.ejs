<%- include('partials/header'); -%>

<h1> Compose </h1>

<form action="/compose" method="post">
    <div class="form-group">
        
        <label for="newContentTitle">Title</label>
        <input class="form-control" type="text" name="newContentTitle" id="newContentTitle" required>
        
    </div>
    <div class="form-group">
        <label for="newContent">Post</label>
        <textarea class="form-control" name="newContent" id="newContent" cols="30" rows="10" autocomplete="off" required></textarea>
        
    </div>
    <button class="btn btn-primary" type="submit" name="compose" value="">Publish</button>
</form>

<%- include('partials/footer'); -%>